<Window x:Class="Wpf_PasswordBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Wpf_PasswordBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Background="Beige"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <local:XPasswordBox x:Name="passwordBox"
                            Width="300"
                            Password="{Binding Password, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                            PlaceholderText="Placeholder" />
    </Grid>
</Window>
